@model Appointment

<h2>Edit Appointment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AppointmentID" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

     <div class="form-group">
           <label asp-for="AppointmentDateTime"></label>
           <input asp-for="AppointmentDateTime" type="datetime-local" class="form-control"/>
           <span asp-validation-for="AppointmentDateTime" class="text-danger"></span>
       </div>

    <div class="form-group">
        <label asp-for="PatientID"></label>
        <select asp-for="PatientID" asp-items="@(new SelectList(ViewBag.Patients, "PatientID", "FullName"))" class="form-control"></select>
        <span asp-validation-for="PatientID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorID"></label>
        <select asp-for="DoctorID" asp-items="@(new SelectList(ViewBag.Doctors, "DoctorID", "FullName"))" class="form-control"></select>
        <span asp-validation-for="DoctorID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
