@model Appointment

<h2>Appointment Details</h2>

<dl class="row">
    <dt class="col-sm-2">Appointment ID</dt>
    <dd class="col-sm-10">@Model.AppointmentID</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.AppointmentDateTime.ToShortDateString()</dd>

    <dt class="col-sm-2">Time</dt>
    <dd class="col-sm-10">@Model.AppointmentDateTime.ToShortTimeString()</dd>

    <dt class="col-sm-2">Patient</dt>
    <dd class="col-sm-10">@Model.Patient.FirstName @Model.Patient.LastName</dd>

    <dt class="col-sm-2">Doctor</dt>
    <dd class="col-sm-10">@Model.Doctor.FirstName @Model.Doctor.LastName</dd>
</dl>

<div>
    <a asp-action="Index">Back to List</a>
</div>
