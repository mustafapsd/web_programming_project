@model Doctor

<h2>Delete Doctor</h2>

<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Doctor ID: @Model.DoctorID</h4>
        <h4>First Name: @Model.FirstName</h4>
        <h4>Last Name: @Model.LastName</h4>
        <h4>Specialization: @Model.Specialization</h4>
        <h4>Contact Number: @Model.ContactNumber</h4>
        <h4>Email: @Model.Email</h4>
        <h4>Department: @Model.Department.DepartmentName</h4>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DoctorID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>