@model G221210391_2C.Models.Appointment

<h2>Create Appointment</h2>

<form asp-controller="Appointment" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AppointmentDateTime"></label>
        <input asp-for="AppointmentDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="AppointmentDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PatientID"></label>
        <select asp-for="PatientID" asp-items="@(new SelectList(ViewBag.Patients, "PatientID", "FirstName"))" class="form-control"></select>
        <span asp-validation-for="PatientID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorID"></label>
        <select asp-for="DoctorID" asp-items="@(new SelectList(ViewBag.Doctors, "DoctorID", "FirstName"))" class="form-control"></select>
        <span asp-validation-for="DoctorID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<AppointmentStatus>()" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Reason"></label>
        <textarea asp-for="Reason" class="form-control"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>
    
    <input type="hidden" value="homepage" name="refPage"/>
    
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
